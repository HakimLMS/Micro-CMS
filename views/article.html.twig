{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<p>
    <h2>{{ article.title }}</h2>
    <p>{{ article.content }}</p>
    <h3>Comments</h3>
        {%if comments != null %}
        {% for comment in comments %}
            {%if comment.children == null and comment.parent == 0%}
                <p><strong>{{ comment.author }}</strong> said : {{ comment.content }}<br><p>


            {% endif %}
        {% endfor %}
        {% else %}
        No comments yet...
        {% endif %}
        </p>
{% endblock %}