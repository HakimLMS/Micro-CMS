{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
    <div class="container" style="padding-top: 20px;">
        <div class="wrapper">
            {% for article in articles %}
            {% if article.state == 'publie' %}
            <div class="col-md-4">  
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="http://www.hakimlouahem.com/Photos/{{ article.id}}.jpg"  width="50" height="200">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">{{ article.title }}<i class="glyphicon glyphicon-option-horizontal" style="float: right;"></i></span>
                        <p><a href="{{ path ('article', {'id': article.id})}}">En lire plus</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{article.title }}<i class="glyphicon glyphicon-option-vertical" style="float: right;"></i></span>
                        <br><p>{{ article.content | truncate(60) }}</p>
                    </div>
                </div>
            </div>
                 
        {% endif %}
        {% endfor %}
        </div>  
    </div>  
{% endblock %}

 
            