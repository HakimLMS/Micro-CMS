<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1"><link href="{{ asset('/css/microcms.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/microcms.css') }}" rel="stylesheet">
        <title>Billet simple pour l'Alaska</title>
    </head>
    <body>
        <header>
            <ul id="dropdown1" class="dropdown-content">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('logout') }}">Log out</a></li>
                    {% else %}
                    <li><a href="{{ path('login') }}">Log in</a></li>
                    {% endif %}
            </ul>
            <nav class="col s12">
                <div class="nav-wrapper  teal">                
                    <a href="{{ path('home') }}" class="brand-logo">Billet simple pour l'Alaska</a>
                    <a href="#!" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="{{path('home')}}">Accueil</a></li>
                        <li><a href="{{path('about')}}">A propos</a></li>
                        <li><a href="{{path('articles')}}">Articles</a></li>                      
                        <!-- Dropdown Trigger -->
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li class="{% if adminMenu is defined %}active{% endif %}"><a href="{{ path('admin') }}">Administration</a></li>
                            <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Welcome, {{app.user.username }}<i class="material-icons right">arrow_downward</i></a></li>
                            {% else %}
                            <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Non connecté<i class="material-icons right">arrow_drop_down</i></a></li>
                            {% endif %}  
                    </ul>
                    <ul class="side-nav" id="mobile-demo">
                        <li><a href="{{path('home')}}">Accueil</a></li>
                        <li><a href="{{path('about')}}">A propos</a></li>
                        <li><a href="{{path('articles')}}">Articles</a></li> 
                            {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li class="{% if adminMenu is defined %}active{% endif %}"><a href="{{ path('admin') }}">Administration</a></li>
                            <li><a href="{{path('logout')}}">Logout</a></li>
                            {% else %}
                            <li><a href="{{ path('login') }}">Log in</a></li>
                            {% endif %}
                    </ul>                
                </div>
            </nav>   
        </header>

        <main>
            <div id="content">{% block content %}{% endblock %}</div>
        </main>

        <footer class="page-footer teal">            
            <div class="footer-copyright">
                <div class="row">
                    <div class="col s4">
                    © 2017 Copyright HL
                    </div>
                    <div class="col s4">
                        <a class="grey-text text-lighten-4 right center" href="{{ path('home') }}">Billet simple pour l'Alaska</a>
                    </div>
                    <div class="col s4">
                        <a class="grey-text text-lighten-4 right" href="{{ path('CGU') }}">Conditions générales</a>
                    </div>
                    
                </div>
            </div>
            <!--Import jQuery before materialize.js-->
            <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        {% block script %}{% include "materialize.html.twig" %}{% endblock %}    
        </footer>
    </body>
</html>
